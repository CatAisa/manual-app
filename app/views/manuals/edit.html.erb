<%= render "shared/header" %>

<%= link_to 'マニュアル詳細画面に戻る', manual_path(@manual), class: "edit-to-new" %>
<div class="new-page-title"> 編集したいマニュアルの情報を入力</div>

<div class="form-manual-contents">
  <%= form_with model: @manual, local: true do |f| %>
    <%= render 'shared/error_messages', model: f.object %>
    <%= render 'shared/form', {f: f, title_name: 'マニュアル名', title_count: '20', description_name: 'マニュアル説明', description_count: '160', submit_text: '編集完了'} %>
  <% end %>
</div>