<%= link_to 'トップ画面に戻る', root_path %>
<%= link_to 'マニュアル詳細に戻る', manual_path(@manual) %>

<h1 style="font-size: 30px;">マニュアル手順編集画面</h1>
<%= form_with model: [@manual, @procedure], local: true do |f| %>
  <%= render 'shared/error_messages', model: f.object %>
  <%= render 'shared/form_procedure', f: f %>

  <div>
    <%= f.submit '編集を完了' %>
  </div>

<% end %>