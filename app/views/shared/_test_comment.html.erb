<div class=<%= type %> style="" <%= type %>_id=<%= comment.id %>>
  <div class="<%= type %>-header">
    <%= comment.user.nickname %>
    <span class="<%= type %>-time"><%= l comment.created_at %></span>
    <% if manual.user.id == current_user.id || comment.user.id == current_user.id %>
      <%= link_to '削除', path, method: :delete, id: "#{type}-delete#{comment.id}" %>
    <% else %>
      <%= link_to '削除', path, method: :delete, id: "#{type}-delete#{comment.id}", style: "display: none;" %>
    <% end %>
  </div>
  <div class="<%= type %>-text"><%= comment.content %></div>
</div>