<%= render "shared/header" %>

<div class="new-page-title">ユーザー情報入力</div>

<div class="form-manual-contents">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    
    <div class="new-user-email">【メールアドレス】
      <span class="need-icon">必須</span>
    </div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "  PC・携帯どちらでも可", class: "form-user-email" %>

    <div class="new-user-password">【パスワード】
      <span class="need-icon">必須</span>
    </div>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-user-password" %>

    <div>
      <%= f.submit "ユーザー情報送信", class: "new-submit-btn" %>
    </div>
  <% end %>

  <div class="guest-border"></div>
  <%= link_to 'ゲスト１でログイン', users_guest_sign_in_path(guest_id: 1), method: :post, class: "guest-user" %>
  <%= link_to 'ゲスト２でログイン', users_guest_sign_in_path(guest_id: 2), method: :post, class: "guest-user" %>
</div>
