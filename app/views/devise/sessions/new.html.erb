<%= render "shared/header" %>

<div class="new-page-title">ユーザー情報入力</div>

<div class="form-manual-contents">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    
    <div class="new-user-email">【メールアドレス】
      <span class="need-icon">必須</span>
    </div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "(例)", class: "form-user-email" %>

    <div class="new-user-password">【パスワード】
      <span class="need-icon">必須</span>
    </div>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "(例)", class: "form-user-password" %>

    <div>
      <%= f.submit "ユーザー情報送信", class: "new-submit-btn" %>
    </div>
  <% end %>
</div>
